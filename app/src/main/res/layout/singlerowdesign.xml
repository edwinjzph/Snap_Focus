<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:padding="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/nametext"
            android:layout_marginTop="-25dp"
           />

        <TextView
            android:id="@+id/ff"
            style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Art style:"
            android:textColor="#eba229" />

        <TextView
            android:id="@+id/nametext"
            style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/ff"
            android:text="This is Demo Name"
          />

        <TextView
            android:id="@+id/ee"
            style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff"
            android:layout_marginStart="21dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Status:"
            android:textColor="#eba229" />

        <TextView
            android:id="@+id/coursetext"
            style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff"
            android:layout_alignBottom="@+id/ee"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/ee"
            android:layout_toRightOf="@+id/ee"
            android:text="This is Course Name"
         />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/ff"
            android:layout_toEndOf="@+id/coursetext"
            android:layout_toRightOf="@+id/coursetext"
            android:src="@drawable/ic_baseline_forward_24" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
